<Window x:Class="ToDoList.TaskDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Details" Height="200" Width="400">
    <Grid>
        <TextBlock Text="Заголовок:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Width="300" IsReadOnly="True"/>

        <TextBlock Text="Описание:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Margin="80,50,0,0" VerticalAlignment="Top" Width="300" Height="100" TextWrapping="Wrap" IsReadOnly="True"/>
    </Grid>
</Window>
